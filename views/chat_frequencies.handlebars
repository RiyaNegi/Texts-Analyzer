<link type="text/css" href="/css/sentiments.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js" type="text/javascript"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.css" rel="stylesheet">

<aside>
    <ul>
        {{#each frequencies}}
            <li><span><a href="/chat_frequencies?userId={{this.user_id}}">{{this.name}}</a></span><span></span></li>
        {{/each}}
    </ul>
</aside>


<div class="main-container">
{{freq_data.name}}

<canvas id="myChart" style="height: 100px !important; margin-left: -28px; margin-top: -28px;"></canvas>

<script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
  type: 'line',
  data: {
    labels: [...Array(24).keys()],
    datasets: [{ 
        data: [{{#each freq_data.data}}"{{this}}"{{#unless @last}},{{/unless}}{{/each}}],
        label: "Frequency",
        borderColor: "#3e95cd",
        fill: false
      }
    ]
  },
  options: {
    title: {
      display: true,
    }
  }
});


</script>

</div>